<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/startGameFragment">

    <fragment
        android:id="@+id/startGameFragment"
        android:name="com.example.nubmergame.presentation.StartGameFragment"
        android:label="StartGameFragment" >
        <action
            android:id="@+id/action_startGameFragment_to_chooseGameLevelFragment"
            app:destination="@id/chooseGameLevelFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseGameLevelFragment"
        android:name="com.example.nubmergame.presentation.ChooseGameLevelFragment"
        android:label="ChooseGameLevelFragment" >
        <action
            android:id="@+id/action_chooseGameLevelFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.nubmergame.presentation.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_endGameFragment"
            app:destination="@id/endGameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="level"
            app:argType="com.example.nubmergame.domain.Level" />
    </fragment>
    <fragment
        android:id="@+id/endGameFragment"
        android:name="com.example.nubmergame.presentation.EndGameFragment"
        android:label="EndGameFragment" >
        <argument
            android:name="result"
            app:argType="com.example.nubmergame.domain.GameResult" />
    </fragment>
</navigation>